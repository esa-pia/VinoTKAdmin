<h1>Listing evenements</h1>

<table>
  <tr>
    <th>Titre</th>
    <th>Description</th>
    <th>Image file name</th>
    <th>Image content type</th>
    <th>Image file size</th>
    <th>Image updated at</th>
    <th>Date debut</th>
    <th>Date fin</th>
    <th>Newsletter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @evenements.each do |evenement| %>
  <tr>
    <td><%= evenement.titre %></td>
    <td><%= evenement.description %></td>
    <td><%= evenement.image_file_name %></td>
    <td><%= evenement.image_content_type %></td>
    <td><%= evenement.image_file_size %></td>
    <td><%= evenement.image_updated_at %></td>
    <td><%= evenement.date_debut %></td>
    <td><%= evenement.date_fin %></td>
    <td><%= evenement.newsletter %></td>
    <td><%= link_to 'Show', evenement %></td>
    <td><%= link_to 'Edit', edit_evenement_path(evenement) %></td>
    <td><%= link_to 'Destroy', evenement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

